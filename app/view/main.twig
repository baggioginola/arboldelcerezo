{% extends "layout/master.twig" %}

{% block title %}Inicio{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="container-fluid wide-content">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="{{ settings.IMG }}productos/1.jpg" alt="">
                </div>

                <div class="item">
                    <img src="{{ settings.IMG }}productos/2.jpg" alt="">
                </div>

                <div class="item">
                    <img src="{{ settings.IMG }}productos/3.jpg" alt="">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div id="section_2" class="container highlights-new">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h2 class="highlightsTitle">Productos</h2>

                    <div class="row">
                        {% for producto in products %}
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                <div class="item-highlights-new">
                                    <div class="thumbnail">
                                        <a href="{{ settings.DOMAIN }}producto/{{ producto.id }}">
                                            <div class="content-image">
                                                <img class="img-responsive center-block"
                                                     src="{{ settings.PRODUCT_IMG }}{{ producto.id }}.jpg"
                                                     alt=""
                                                     style="height: 225px;">
                                            </div>
                                        </a>
                                    <span class="product-name">
                                        <a href="{{ settings.DOMAIN }}producto/{{ producto.id }}">
                                            {% autoescape %}
                                            {{ producto.nombre | raw }}
                                            {% endautoescape %}
                                            <br>
                                            $ {{ producto.precio }}
                                        </a>
                                    </span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}